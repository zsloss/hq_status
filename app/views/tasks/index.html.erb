<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Flow</th>
      <th>Product</th>
      <th>Doc type</th>
      <th>Start date</th>
      <th>Priority</th>
      <th>Status</th>
      <th>Region</th>
      <th>Done</th>
      <th>Draft</th>
      <th>Draft submitted</th>
      <th>Completion date</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.order(:priority).each do |task| %>
      <tr>
        <td><%= task.flow %></td>
        <td><%= task.product %></td>
        <td><%= task.doc_type %></td>
        <td><%= task.start_date %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= task.region %></td>
        <td><%= task.done %></td>
        <td><%= task.draft %></td>
        <td><%= task.draft_submitted %></td>
        <td><%= task.completion_date %></td>
        <td><%= task.notes %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

